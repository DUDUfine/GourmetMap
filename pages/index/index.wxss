/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

page{height:100%}

.normal-ipt {
  border-bottom: 1px solid #ccc;
  height: 42px;
  font-size: 16px;
  margin:0 10px;
  display:inline-block;

}
.normal-textarea {
  height:80px;
  margin:10px 10px 10px 10px;
  border-bottom:1px solid #ccc;
  margin-bottom:10px;
  width:95%;
  box-sizing:border-box;
  font-size:16px;
 
}
.mark-btn {
  margin: 10px  10px;
  background-color: #fbc422;
}
.mark-btn-cancel {
  margin: 10px  10px;
  background-color: #ccc;
  width:calc(50% - 20px);
  display:inline-block
}
.mark-btn-ok {
  margin: 10px  10px;
  background-color: #fbc422;
  width:calc(50% - 20px);
  display:inline-block
}

.mark-form {
  border:  1px solid #ccc;
  border-radius: 5px;
  margin: 0 10px 10px;
}
.m-form-icon {
  width:40px;
  height:40px;
}
.row-item {
  margin-left: 10px;
}